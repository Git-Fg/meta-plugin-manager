{
  "enabledMcpjsonServers": [
    "exa",
    "deepwiki",
    "simplewebfetch"
  ],
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(rm*)",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/scripts/rm-rf-block.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/scripts/prettier-hook.sh",
            "description": "Hook d'hygiène: Formate automatiquement les fichiers .ts et .md avec Prettier après chaque écriture (message discret: [Document auto-formatted])"
          }
        ]
      }
    ]
  }
}